{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "lib": [
            "es2017",
            "dom",
            "es6"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "../src",
        "**/*"
    ],
    "files": [
        "./src/main.ts"
    ],
    "exclude": [
        "node_modules",
        "../src/node_modules",
        "../src/typings",
        "platforms",
        "**/*.aot",
        "**/*.spec.ts"
    ]
}
